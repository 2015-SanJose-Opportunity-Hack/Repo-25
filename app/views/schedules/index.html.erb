<h1>Listing Schedules</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <div class="text-center">
  


  <%= form_for :schedule, url: '/schedules' do |f| %>

    Site <%= f.collection_select :site_id, Site.all, :id,:name, include_blank: true %>
    <br>
    Program Leader: <%= f.collection_select :user_id, [], :id, :name %><br />
    Curriculum Id : <%= f.collection_select :curriculum_id, Curriculum.all, :id, :name %><br />
    Start Date   : <%= f.date_select(:start_date,:start_year => 1950) %><br />


    <%= f.submit %>
  <% end %>

</div>
  </tbody>
</table>
