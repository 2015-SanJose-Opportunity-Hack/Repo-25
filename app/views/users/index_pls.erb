          <tbody>
          <% @pls.each do |pl| %>  
            <% pl.available_schedule.each do |as| %>
              <tr>
                <td><%= pl.name %></td>
                <td><%= as.start_date %></td>
                <td><%= as.end_date %></td>
              </tr>
            <% end %>
          <% end %>
          </tbody>
          <tfoot>
          <tr><th colspan="3">
