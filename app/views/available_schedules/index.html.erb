
<p id="notice"><%= notice %></p>

<h1>List Available Schedules</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <div class="text-center">


  <%= form_for :available_schedule, url: '/available_schedules' do |f| %>

    Site <%= f.collection_select :site_id, Site.all, :id, :name, include_blank: true %>
    <br>
    Start Date   : <%= f.date_select(:start_date,:start_year => 1950) %><br />
    End Date   : <%= f.date_select(:end_date,:start_year => 1950) %><br />


    <%= f.submit value: "Submit" %>
  <% end %>

</div>
  </tbody>
</table>
<div class="ui container">
        <table class="ui celled table">
          <thead>
          <tr><th>Name</th>
            <th>PL Assigned</th>
            <th>Start Date</th>
          </tr></thead>
          <tbody>
          <!--#% if @available_schedules.present? %-->
            <% @available_schedules.each do |asch| %>  
                puts asch.inspect
                <tr>
                  <td><%= asch.program_leader_id %></td>
                  <td><%= asch.start_date %></td>
                  <td><%= asch.end_date %></td>
                </tr>
            <% end %>
          <!--#% end %-->
          </tbody>
          <tfoot>
          <tr><th colspan="4">
            <div class="ui right floated pagination menu">
              <a class="icon item">
                <i class="left chevron icon"></i>
              </a>
              <a class="item">1</a>
              <a class="item">2</a>
              <a class="item">3</a>
              <a class="item">4</a>
              <a class="icon item">
                <i class="right chevron icon"></i>
              </a>
            </div>
          </th>
          </tr></tfoot>
        </table>
      </div>
<br>

